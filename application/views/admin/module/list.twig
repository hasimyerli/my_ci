{% extends "admin/layout/datatable.twig" %}

{# set title #}
{% block title %} {{ title }} {% endblock %}

{% block content %}
    <a href="{{ base_url('admin/module/refresh') }}" class="btn btn-outline-primary">Güncel Modülleri Yükle</a>
    <br><br>
    <table class="table table-striped table-bordered zero-configuration">
      <thead>
      <tr>
        <th>Sıra</th>
        <th>Modül</th>
        <th>Açıklama</th>
        <th>Dosya</th>
        <th>İşlemler</th>
      </tr>
      </thead>
      <tbody>
      {% for module in modules %}
        <tr>
          <td>{{ module.id }}</td>
          <td>{{ module.name }}</td>
          <td>
            {{ module.description }}
          </td>
          <td>{{ module.unique_name }}</td>
          <td>
            <a href="{{ base_url('admin/module/edit') }}/{{ module.id }}" class="btn btn-sm btn-outline-amber btn-icon">
              <i class="ft-edit"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
{% endblock %}
