{% extends "admin/layout/default.twig" %}

{# set title #}
{% block title %} {{ title }} {% endblock %}

{% block content %}
  <div class="table-responsive">
    <a href="{{ base_url('admin/module/refresh') }}" class="btn btn-primary">Güncel Modülleri Yükle</a>
    <br><br>
    <table class="table table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Sıra</th>
        <th>Modül</th>
        <th>Açıklama</th>
        <th>Dosya</th>
        <th>İşlemler</th>
      </tr>
      </thead>
      <tbody>
      {% for module in modules %}
        <tr>
          <td>{{ module.id }}</td>
          <td>{{ module.name }}</td>
          <td>
            {{ module.description }}
          </td>
          <td>{{ module.unique_name }}</td>
          <td>
            <a href="{{ base_url('admin/module/edit') }}/{{ module.id }}" class="btn btn-sm btn-warning">
              Düzenle
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
