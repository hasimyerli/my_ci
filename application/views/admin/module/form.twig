{% extends "admin/layout/default.twig" %}

{% block content %}
    <form action="{{ formAction }}" method="post">
        <input class="form-control" type="hidden" name="{{ csrfName }}" value="{{ csrfToken }}">
        <div class="row">
            <div class="col-md-12 form-group">
                <div class="table-responsive">
                    <h5>MODÜL</h5>
                    <table class="table table-striped table-bordered zero-configuration">
                        <tbody>
                            <tr>
                                <td><b>{{ module.name }}</b></td>
                                <td>
                                    <input type="text" class="form-control" name="moduleName" value="{{ module.description }}" placeholder="Modül Adı">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <h5>EYLEMLER / ACTİONS</h5>
                    <table class="table table-striped table-bordered zero-configuration">
                        <tbody>
                        {% for key, action in  moduleActions %}
                            <tr>
                                <td>
                                    <b>{{ action.name }}</b>
                                </td>
                                <td>
                                    <input type="text" class="form-control" name="moduleActions[{{ action.id}}]" value="{{ action.description }}" placeholder="Eylem Adı">
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
{% endblock %}
