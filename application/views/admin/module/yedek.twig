{% extends "admin/layout/default.twig" %}

{% block content %}
    <form action="{{ formAction }}" method="post">
        <input class="form-control" type="hidden" name="{{ csrfName }}" value="{{ csrfToken }}">
        <div class="form-group">
            <label for=""><b>Grup Adı</b></label>
            <input type="text" class="form-control" name="name" value="{{ name }}">
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Modül</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for permissionKey,permission in permissions %}
                            <tr>
                                <th>{{ permissionKey }}</th>
                                <td>
                                    <table class="table table-bordered" width="100%" cellspacing="0">
                                        <thead>
                                        <th>Eylem</th>
                                        <th>Erişim Yetkisi(Görüntüleme)</th>
                                        <th>Değişim Yetkisi(Ekleme, Silme, Güncelleme)</th>
                                        </thead>
                                        <tbody>
                                        {% for moduleKey, module in  permission %}
                                            <tr>
                                                <td> {{ module }} </td>
                                                <td>
                                                    <input type="checkbox">
                                                </td>
                                                <td>
                                                    <input type="checkbox">
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
{% endblock %}
