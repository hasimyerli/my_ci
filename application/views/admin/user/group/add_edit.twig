{% extends "admin/layout/default.twig" %}

{% block content %}
    <form action="{{ formAction }}" method="post">
        <input class="form-control" type="hidden" name="{{ csrfName }}" value="{{ csrfToken }}">
        <div class="form-group">
            <label for=""><b>Grup Adı</b></label>
            <input type="text" class="form-control" name="name" value="{{ name }}">
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th colspan="2">Modül</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for moduleKey, module in moduleData %}
                            <tr>
                                <td>
                                    {{ module['module'].description }}
                                </td>
                                <td>
                                    <table class="table table-bordered" width="100%" cellspacing="0">
                                        <thead>
                                        <tr>
                                            <td>Eylem</td>
                                            <td>Erişim</td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for action in module['actions'] %}
                                                <tr>
                                                    <td>
                                                        {{ action.description }}
                                                    </td>
                                                    <td>
                                                        <input type="checkbox" name="moduleData[{{ module['module'].unique_name }}][]" value="{{ action.name }}"
                                                            {% if action.name in hasModule[module['module'].unique_name] %}
                                                                checked="checked"
                                                            {% endif %}
                                                        >
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
{% endblock %}
