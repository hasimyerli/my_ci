{% extends "admin/layout/datatable.twig" %}

{# set title #}
{% block title %} {{ title }} {% endblock %}

{% block content %}
  <table class="table table-striped table-bordered zero-configuration">
      <thead>
      <tr>
        <th>Sıra</th>
        <th>Group</th>
        <th>İşlemler</th>
      </tr>
      </thead>
      <tbody>
      {% for group in groups %}
        <tr>
          <td>{{ group.id }}</td>
          <td>{{ group.name }}</td>
          <td>
            <a href="{{ base_url('admin/user/group/edit') }}/{{ group.id }}" class="btn btn-sm btn-outline-amber btn-icon">
              <i class="ft-edit"></i>
            </a>
            <a href="{{ base_url('admin/user/group/delete') }}/{{ group.id }}" class="btn btn-sm btn-outline-danger btn-icon">
              <i class="ft-trash-2"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
{% endblock %}
