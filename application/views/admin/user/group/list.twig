{% extends "admin/layout/default.twig" %}

{# set title #}
{% block title %} {{ title }} {% endblock %}

{% block content %}
  <div class="table-responsive">
    <table class="table table-bordered" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Sıra</th>
        <th>Group</th>
        <th>İşlemler</th>
      </tr>
      </thead>
      <tbody>
      {% for group in groups %}
        <tr>
          <td>{{ group.id }}</td>
          <td>{{ group.name }}</td>
          <td>
            <a href="{{ base_url('admin/user/group/edit') }}/{{ group.id }}" class="btn btn-warning  btn-circle">
              <i class="fas fa-pencil-alt"></i>
            </a>
            <a href="{{ base_url('admin/user/group/delete') }}/{{ group.id }}" class="btn btn-danger btn-circle">
              <i class="fas fa-trash"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
