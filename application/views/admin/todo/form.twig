{% extends "admin/layout/default.twig" %}

{% block content %}
  <form class="form form-horizontal form-bordered" action="{{ formAction }}" method="post">
    <input class="form-control" type="hidden" name="{{ csrfName }}" value="{{ csrfToken }}">
    <div class="form-body">
      <div class="form-group row">
        <label class="col-md-2 label-control" for="eventRegInput1">Başlık</label>
        <div class="col-md-10">
          <input type="text" class="form-control" placeholder="Başlık" name="title" value="{{ title }}">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-2 label-control" for="eventRegInput2">Açıklama</label>
        <div class="col-md-10">
      <textarea name="description" class="form-control" placeholder="Açıklama">{{ description }}</textarea>
        </div>
      </div>
      <div class="form-group row last">
        <label class="col-md-2 label-control" for="eventRegInput2">Açıklama</label>
        <div class="col-md-10">
          <div class="position-relative has-icon-left">
            <input type="date" class="form-control" name="date" value="{{ date }}">
            <div class="form-control-position">
              <i class="la la-calendar"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-actions center">
      <button type="reset" class="btn btn-secondary">
        İptal
      </button>
      <button type="submit" class="btn btn-success">
        Kaydet
      </button>
    </div>
  </form>
{% endblock %}
