{% extends "admin/layout/datatable.twig" %}

{# set title #}
{% block title %} {{ title }} {% endblock %}

{% block content %}
  <table class="table table-striped table-bordered zero-configuration">
    <thead>
      <tr>
        <th>Sıra</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>İşlem</th>
      </tr>
    </thead>
    <tbody>
    {% for todo in todoList %}
      <tr>
        <td>{{ todo.id }}</td>
        <td>{{ todo.title }}</td>
        <td>{{ todo.description }}</td>
        <td>
            {% if todo.date == date("Y-m-d") %}
                {% set style = "success" %}
                {% set text = "Bugün" %}
            {% elseif  todo.date < date("Y-m-d") %}
              {% set style = "danger" %}
              {% set text = "Geçti" %}
            {% else %}
                {% set style = "secondary" %}
                {% set text = "Gelecek" %}
            {% endif %}
          <span class="badge badge-{{ style }}">{{ text }} / {{ todo.date }}</span>
        </td>
        <td>
          <a href="{{ base_url('admin/todo/edit') }}/{{ todo.id }}" class="btn btn-sm btn-outline-amber btn-icon">
            <i class="ft-edit"></i>
          </a>
          <a href="{{ base_url('admin/todo/delete') }}/{{ todo.id }}" class="btn btn-sm btn-outline-danger btn-icon">
            <i class="ft-trash-2"></i>
          </a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
